{
  "name": "affineplane",
  "version": "1.0.1",
  "description": "Affine plane geometry library",
  "keywords": [
    "affine",
    "transformation",
    "plane",
    "2d",
    "space",
    "geometry",
    "scale",
    "rotate",
    "translate",
    "estimator",
    "rigid",
    "nonreflective",
    "similarity",
    "helmert",
    "perspective"
  ],
  "homepage": "https://github.com/axelpale/affineplane",
  "main": "index.js",
  "author": {
    "name": "Akseli Palen",
    "email": "akseli.palen@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/axelpale/affineplane.git"
  },
  "license": "MIT",
  "devDependencies": {
    "async": "^3.2.3",
    "genversion": "^3.1.1",
    "standard": "^16.0.4",
    "tape": "^5.5.3"
  },
  "scripts": {
    "lint": "standard index.js 'lib/**/*.js' 'test/**/*.js'",
    "lint:fix": "standard --fix index.js 'lib/**/*.js' 'test/**/*.js'",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "node test/index.test.js",
    "gv": "genversion lib/version.js",
    "build:docs": "node docs/gendocs/index.js",
    "build:standalone": "browserify index.js --standalone affineplane -o affineplane.js",
    "release": "npm run gv && npm run test && npm run build:docs && npm publish"
  }
}
